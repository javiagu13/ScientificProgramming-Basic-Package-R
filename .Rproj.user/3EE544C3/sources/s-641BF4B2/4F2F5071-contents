## #R1.5
 v <- c(-0.29, 2.11, -3.84, 10.69, 5.30)
 v.norm <- (v - min(v)) / (max(v) - min(v))
  min(v.norm)
 max(v.norm)

 v.est <- (v-mean(v)) / sd(v)
 mean(v)
 mean(v.est)
 sd(v)
 sd(v.est)
